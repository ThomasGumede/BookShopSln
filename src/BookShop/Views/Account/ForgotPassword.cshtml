@model PasswordVM

@{
    Layout = "_AccountLayer.cshtml";
}

<div class="space-y-5">
    <div class="space-y-3 w-80">
        <h1 class="font-poppins font-bold text-2xl">Reset Password</h1>
        <div class="text-base text-slate-600 font-normal space-y-4">
            <p>
                Enter the email address you used when you joined and we'll send
                you instructions to reset your password.
            </p>
            <p>
                For security reasons, we do NOT store your password. So rest assured that we will never send your
                password via email.
            </p>
        </div>
    </div>

    <div class="space-y-3">
        <form method="post" class="space-y-4">

            <div class="block space-y-2 w-full">
                <label asp-for="@Model.Email" class="text-black text-base font-semibold block"></label>
                <input asp-for="@Model.Email"
                    class="border-2 block outline-none  bg-slate-200 p-2 h-12 focus:border-blue-400 rounded-md focus:bg-white" />
            </div>

            <div class="text-center h-12 bg-blue-600 w-[150px] rounded-md cursor-pointer">
                <input type="submit" value="submit"
                    class="text-white w-full h-full cursor-pointer text-sm font-semibold" />
            </div>
            <div>
                <p class="text-base font-normal">Don't have an account? <a asp-controller="Account"
                        asp-action="ResetPassword" class="text-blue-700">Sign Up</a></p>
            </div>
        </form>
    </div>

</div>