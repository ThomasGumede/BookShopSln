@model RegisterVM

@{
    Layout = "_AccountLayer.cshtml";
}

<div class="space-y-5">
    <div class="space-y-3">
        <h1 class="font-poppins font-bold text-2xl">Sign Up To BookShop</h1>
        <div class="space-x-4">
            <div class="inline-block w-11 h-11 bg-slate-300 text-center">
                <a>
                    <i></i>
                </a>
            </div>
            <div class="inline-block w-11 h-11 bg-slate-300 text-center">
                <a>
                    <i></i>
                </a>
            </div>
        </div>
    </div>
    <div class="text-center">
        
        <p class="inline-block">Or</p>
        
    </div>


    <div class="space-y-3">
        <form method="post" asp-action="Register"  class="space-y-4">
            <div class="block space-x-3">
                <div class="space-y-2 inline-block">
                    <label asp-for="@Model.FirstName" class="text-black text-lg font-semibold block"></label>
                    <input asp-for="@Model.FirstName" class="border-2 block outline-none bg-slate-200 p-2 w-72 h-12 focus:border-blue-400 rounded-md focus:bg-white" />
                </div>
                <div class="space-y-2 inline-block">
                    <label asp-for="@Model.LastName" class="text-black text-lg font-semibold block"></label>
                    <input asp-for="@Model.LastName" class="border-2 block outline-none bg-slate-200 p-2 w-72 h-12 focus:border-blue-400 rounded-md focus:bg-white" />
                </div>
            </div>
            <div class="block space-y-2 w-full">
                <label asp-for="@Model.Email" class="text-black text-lg font-semibold block"></label>
                <input asp-for="@Model.Email" class="border-2 block outline-none w-full bg-slate-200 p-2 h-12 focus:border-blue-400 rounded-md focus:bg-white" />
            </div>
            <div class="block space-x-3">
                <div class="space-y-2 inline-block">
                    <label asp-for="@Model.Password" class="text-black text-lg font-semibold block"></label>
                    <input asp-for="@Model.Password" class="border-2 block outline-none bg-slate-200 p-2 w-72 h-12  focus:border-blue-400 rounded-md focus:bg-white" />
                </div>
                <div class="space-y-2 inline-block">
                    <label asp-for="@Model.ConfirmPassword" class="text-black text-lg font-semibold block"></label>
                    <input asp-for="@Model.ConfirmPassword" class="border-2 block outline-none bg-slate-200 p-2 w-72 h-12 focus:border-blue-400 rounded-md focus:bg-white" />
                </div>
            </div>
             <div
                class="text-center h-12 bg-blue-600 w-[150px] rounded-md cursor-pointer"
              >
                <input
                  type="submit"
                  value="submit"
                  class="text-white w-full h-full cursor-pointer text-sm font-semibold"
                />
              </div>
              <div>
                <p class="text-lg font-normal">Already have an account? <a asp-controller="Account" asp-action="Login" class="text-blue-700">Log in</a></p>
              </div>
        </form>
    </div>

</div>